<?xml version="1.0" encoding="utf-8"?>
    <resources>

    <style name="MainDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Gravity means
            how the content (such as text or images) is positioned inside a view,
            such as a TextView, Button, or ImageView

            এখানে মজার ব্যাপার gravity দিলে ওই দুই পাশ টানাটানির জিনিসটা থাকে না।
        -->
        <item name="android:gravity">end</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <!-- Smaller font for display -->
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Style for history text above the Main Display -->
    <style name="HistoryDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>